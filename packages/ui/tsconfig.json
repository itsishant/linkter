{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,          // generate .d.ts files for TypeScript
    "jsx": "react-jsx",           // for React 18+ JSX transform
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ESNext",
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
